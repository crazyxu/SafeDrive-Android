<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4/22 17:24 "
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/tv_safety_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安全指数：80"
        android:layout_alignParentRight="true"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/tv_start_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长江大学洗校区"
        android:textSize="17sp"
        android:layout_below="@id/tv_start_time"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_end_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长江大学东校区"
        android:textSize="17sp"
        android:layout_alignTop="@id/tv_start_place"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100公里"
        android:textSize="13sp"
        android:layout_below="@id/tv_start_place"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.5小时"
        android:layout_alignTop="@id/tv_duration"
        android:layout_toRightOf="@id/tv_duration"
        android:layout_marginLeft="20dp"
        android:textSize="13sp"/>
</RelativeLayout>
