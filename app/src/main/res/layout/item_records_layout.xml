<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4/22 17:24 "
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_safety_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:layout_alignParentRight="true"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_start_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="武汉"
        android:textSize="18sp"
        android:layout_below="@id/tv_start_time"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_end_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="荆州"
        android:textSize="18sp"
        android:layout_alignTop="@id/tv_start_place"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100公里"
        android:textSize="16sp"
        android:layout_below="@id/tv_start_place"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.5小时"
        android:layout_alignTop="@id/tv_duration"
        android:layout_toRightOf="@id/tv_duration"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"/>
</RelativeLayout>
