<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="me.xucan.safedrive.ui.activity.DriveRecordActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="湖北荆州 2016/4/25"
        app:navigationIcon="?attr/homeAsUpIndicator"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/tv_start_place"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="长江大学东校区"/>

        <TextView
            android:id="@+id/tv_end_place"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="长江大学西校区"/>

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_toRightOf="@id/tv_start_place"
            android:layout_toLeftOf="@id/tv_end_place"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorDarkGray"
            android:text="11:26"
            android:layout_alignLeft="@id/iv_line"
            android:layout_alignBottom="@id/tv_start_place"/>
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorDarkGray"
            android:text="15:00"
            android:layout_alignRight="@id/iv_line"
            android:layout_alignBottom="@id/tv_start_place"/>
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorDarkGray"
            android:text="2小时25分钟"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/tv_start_place"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/tv_start_place">
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorDarkGray"
                android:text="全程5km"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_safety_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorDarkGray"
                android:text="安全指数:80"/>
        </LinearLayout>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_event_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
